@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>
@if (@Model.Count == 0)
{
  <h2>No Restaurants Saved!!!!1!1!1!!!1</h2> 
}
else
{
  <ul>
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.RestaurantName}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.CuisineType</li>
  }
  </ul>
}
<p>@Html.ActionLink("Add new restaurant", "Create")</p>